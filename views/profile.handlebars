<link rel="stylesheet" type="text/css" href="/css/profile.css">

{{!-- section for tabs/books --}}
<section class="clubs-section-container">
  <div class="clubs-title"><h3>Book Clubs</h3></div>
  <section class="clubs-section shadow1">

{{!-- this is all the clubs --}}
    {{#each Clubs as |bookClub|}}
      {{>club-info}}
    {{/each}}

    <h1>Clubs they're a part of</h1>
    {{name}}
      {{#each clubs as |bookClub|}}

          <a href="/bookclub/{{id}}">
            <div class="club-container">
              <h3>{{name}}</h3>
              <strong>Description: </strong>{{description}} </br>
              <strong>Members: </strong>
              {{!-- this isn't working because it's getting info from api/clubs --}}
              {{#each users as |user|}}
              {{user.name}},
              {{/each}}
            </div>
          </a>

      {{/each}}
  
  <button id="start-new-bc-btn">Start a New Book Club</button>
  
  </section>
  
{{!-- New Club Form --}}
  <form id="newClubForm" style="display: block;">
    <label for="clubName">Club Name</label>
    <input type="text" id="newClubName" name= "clubName" placeholder="Club Name" required>

    <label id="description" for="description">Description</label>
    <input name="description" id="newClubDescription" placeholder="Description" required></input>
  
    <button id="addBookClubBtn" class="new-book-club-btn" type="submit">Create New Book Club</button>
  </form>
  
</section>

